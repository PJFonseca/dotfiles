# Shortcuts
alias reload="source ~/.bashrc"
alias _="sudo"
alias g="git"
alias sr="sudo rm -rf"

# List declared aliases, functions, paths
alias aliases="alias | sed 's/=.*//'"
alias functions="declare -f | grep '^[a-z].* ()' | sed 's/{$//'"
alias paths='echo -e ${PATH//:/\\n}'
alias path='echo -e ${PATH//:/\\n}'

# Directory listing/traversal
alias l="ls -lhF --color=auto"
alias ll="ls -lhAa "
alias lt="ls -lhAtr"
alias ld="ls -ld */"
alias lpm="stat -c '%a %n' *"

alias ~="cd ~"
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias -- -="cd -"
alias cd.='cd $(readlink -f .)'

# Always enable colored grep output`
alias grep="grep -i --color=auto"
alias fgrep="fgrep --color=auto"
alias egrep="egrep --color=auto"

# alias chmod commands
alias mx='chmod a+x'
alias 000='chmod -R 000'
alias 644='chmod -R 644'
alias 666='chmod -R 666'
alias 755='chmod -R 755'
alias 777='chmod -R 777'

unset GREP_OPTIONS

# Miscellaneous
alias pulse="pulseaudio -k"
alias openhab="ssh openhabian@192.168.1.4"
alias hosts="sudo gedit /etc/hosts"
alias quit="exit"
alias week="date +%V"
alias delete="rm -rf"
#alias speedtest="wget -O /dev/null https://speed.hetzner.de/1GB.bin"
alias cls="clear"
alias icons="cd ~/.local/share/applications/"
