# Shortcuts
alias reload="source ~/.bashrc"
alias _="sudo"
alias g="git"
alias sr="sudo rm -rf"

# List declared aliases, functions, paths
alias aliases="alias | sed 's/=.*//'"
alias functions="declare -f | grep '^[a-z].* ()' | sed 's/{$//'"
alias paths='echo -e ${PATH//:/\\n}'

# Directory listing/traversal
alias l="ls -lhF --color=auto"
alias ll="ls -lhAa "
alias lt="ls -lhAtr"
alias ld="ls -ld */"
alias lpm="stat -c '%a %n' *"

alias ~="cd ~"
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias -- -="cd -"
alias cd.='cd $(readlink -f .)'

# Always enable colored grep output`
alias grep="grep --color=auto"
alias fgrep="fgrep --color=auto"
alias egrep="egrep --color=auto"

unset GREP_OPTIONS

# Miscellaneous
alias hosts="sudo gedit /etc/hosts"
alias quit="exit"
alias week="date +%V"
alias speedtest="wget -O /dev/null https://speed.hetzner.de/1GB.bin"
alias path='echo -e ${PATH//:/\\n}'
alias cls="clear"
alias specs="screenfetch"

#Alias to use a specific port
#alias sshn="ssh -p 21098"
#alias sshn-copy-id="ssh-copy-id -p 21098"
alias scpn="scp -P 21098"

alias edit="sudo gedit"
alias fstab="sudo nano /etc/fstab"
alias h="history"
alias install="sudo dnf -y install"
alias sysinfo="sudo rpm -qi basesystem"